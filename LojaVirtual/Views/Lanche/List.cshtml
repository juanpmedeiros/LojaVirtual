@model IEnumerable<LojaVirtual.Models.Lanche>


@** -------------- ViewData e ViewBag -------------- *

    <div>
        <h2>@ViewData["Titulo"]</h2>
    </div>

    <h5>
        @ViewData["Data"]
    </h5>

    <div>
        <h5>
            @ViewBag.Total @ViewBag.TotalLanches
        </h5>
    </div>

    <br />
    <hr />
    <br />*@


    <div class="container">
    <div class="row">
        @foreach (var lanche in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@lanche.ImagemUrl" /></p>
                <h3>Preço : @lanche.Preco.ToString("c")</h3>
                <h4>@lanche.Nome</h4>
                <p>@lanche.DescricaoCurta</p>
            </div>
        }
    </div>
</div>


